<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/appbackground01"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    tools:context="com.example.salmanmapkar.demo.VerifyAccount">

    <ImageView
        android:id="@+id/pcestartuplogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:background="@drawable/pcelogo11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pcestartuplogo"
        android:layout_marginTop="73dp"
        android:text="@string/VerifyPara"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btSignout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/rounded_rectangle_buttons"
        android:text="Sign Out"
        android:textColor="#FFFFFF"
        android:elevation="8dp"/>

    <Button
        android:id="@+id/btContinue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btSignout"
        android:layout_alignBottom="@+id/btSignout"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_rectangle_buttons"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:elevation="8dp"/>

</RelativeLayout>
